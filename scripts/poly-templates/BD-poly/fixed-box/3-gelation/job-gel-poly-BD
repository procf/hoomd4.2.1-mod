#!/bin/bash
#SBATCH -J gel-BD
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=27
#SBATCH --cpus-per-task=1
#SBATCH -t 24:00:00
##SBATCH -t 4-24:00:00
##SBATCH -p long
##SBATCH --mem=128Gb
#SBATCH -o %A.out
#SBATCH -e %A.err

start=$SECONDS

module purge
module load miniconda3/24.11.1
module load OpenMPI/4.1.6
module load cuda/12.1.1
module load OpenBLAS/0.3.29
source # path to software, for example: /projects/props/Rob/software/hoomd4.2.1-mod/hoomdmod4.2.1-venv/bin/activate 

mpirun python3 sim-gel-poly-BD.py

time=$((SECONDS-start))
echo The simulation ran for $((time / 86400))day"(s)" $(((time / 3600) % 24))hr"(s)" $(((time / 60) % 60))min $((time% 60))sec real "(wall clock)" time >&1
