#!/bin/bash
#SBATCH -J f90cmpl
#SBATCH -n 1 -N 1
#SBATCH -t 1:00:00
#SBATCH -o cmpl-%A.out
#SBATCH -e cmpl-%A.err

# compile the fortran module for use analyzing simulation data
module load miniconda3/24.11.1
source # path to software, for example: /projects/props/Rob/software/hoomd4.2.1-mod/hoomdmod4.2.1-venv/bin/activate 
f2py -c -m module module_analysis.f90

# NOTE: error file will warn that you are using a deprecated version of NumPy API
#       this is a known issue for f2py and can be ignored
